<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileUI.UserProfileActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewTop"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:src="@drawable/placeholder_image" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:layout_marginStart="10dp"
        android:id="@+id/userLogout"
        android:backgroundTint="@color/white"
        android:layout_toEndOf="@id/userImage"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_logout"/>

    <TextView
        android:id="@+id/profgreetingEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profPhNo"
        android:layout_below="@id/profgreetingEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="18dp"/>
    </androidx.cardview.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardViewTop"
        android:background="@drawable/layout_border">

        <RelativeLayout
            android:id="@+id/editProfile"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp">
            <TextView
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Profile"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/viewOrders"
            android:layout_toEndOf="@id/editProfile"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp">
            <TextView
                android:layout_centerHorizontal="true"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Orders"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/viewWishlist"
            android:layout_below="@id/editProfile"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Wishlist"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/chat"
            android:layout_toEndOf="@id/viewWishlist"
            android:layout_below="@id/viewOrders"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="100dp"
            android:layout_height="50dp">
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Customer"/>
        </RelativeLayout>

    </RelativeLayout>




</RelativeLayout>
</layout>