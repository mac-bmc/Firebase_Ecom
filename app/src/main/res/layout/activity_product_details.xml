<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="productDetails"
            type="com.example.firebaseecom.model.ProductDetailsModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:layout_constraintTop_toTopOf="parent"
                tools:context=".detailsUI.ProductDetailsActivity">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageButton
                            android:id="@+id/backButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/white"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

                        <ImageButton
                            android:id="@+id/shareButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="16dp"
                            android:backgroundTint="@color/white"
                            android:src="@drawable/ic_share"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productCarousalView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/toolbar"
                    android:layout_marginTop="32dp" />

                <TextView
                    android:id="@+id/productTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/productCarousalView"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="28dp"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/productPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productTitleText"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="28dp"
                    android:textColor="#131313"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/productDiscountText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productTitleText"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="28dp"
                    android:layout_toEndOf="@id/productPriceText"
                    android:text="@{productDetails.component2()}"
                    android:textColor="@color/red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productPriceText"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="36dp"
                    android:freezesText="false"
                    android:text="@string/item_description"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/productDescText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="36dp"
                    android:text="@{productDetails.component1()}"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/textReview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productDescText"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="36dp"
                    android:freezesText="false"
                    android:text="@string/product_review"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/productReviewText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textReview"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="36dp"
                    android:text="@{productDetails.component4()}"
                    android:textSize="16sp" />


            </RelativeLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/buttonColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <Button
                android:id="@+id/buttonBuyNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonColor"
                android:text="Buy Now"
                android:textSize="16sp" />

            <Button
                android:id="@+id/buttonAddToCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonColor"
                android:text="Add to Cart"
                android:textSize="16sp" />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
